# 이 파일이 프로젝트의 최상위 스타일 규칙 파일임을 나타냅니다.
root = true

[*] # 모든 파일에 아래 규칙을 적용합니다.
charset = utf-8             # 문자 인코딩: UTF-8
end_of_line = lf              # 줄바꿈(EOL): LF (Linux/Mac 방식)으로 통일
indent_style = space          # 들여쓰기: 스페이스 사용
indent_size = 2               # 들여쓰기 크기: 2칸
insert_final_newline = true   # 파일 마지막에 항상 빈 줄 추가
trim_trailing_whitespace = true # 줄 끝의 불필요한 공백 자동 제거